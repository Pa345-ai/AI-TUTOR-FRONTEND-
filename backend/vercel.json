{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "functions": {
    "api/ai/chat.js": {
      "maxDuration": 30
    },
    "api/ai/voice.js": {
      "maxDuration": 30
    },
    "api/ai/emotion.js": {
      "maxDuration": 15
    },
    "api/ai/feedback.js": {
      "maxDuration": 30
    },
    "api/ai/summarize.js": {
      "maxDuration": 30
    },
    "api/ai/quiz-generate.js": {
      "maxDuration": 30
    },
    "api/ai/career-advice.js": {
      "maxDuration": 30
    },
    "api/ai/lesson-generate.js": {
      "maxDuration": 30
    },
    "api/ai/translation.js": {
      "maxDuration": 15
    }
  },
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_ANON_KEY": "@supabase_anon_key",
    "SUPABASE_SERVICE_ROLE_KEY": "@supabase_service_role_key",
    "GOOGLE_CLOUD_API_KEY": "@google_cloud_api_key",
    "AZURE_SPEECH_KEY": "@azure_speech_key",
    "AZURE_SPEECH_REGION": "@azure_speech_region"
  }
}