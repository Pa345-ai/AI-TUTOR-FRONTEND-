{
  "name": "ai-tutoring-app-unified",
  "version": "1.0.0",
  "description": "AI Tutoring App - Unified Frontend + Backend Deployment",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "deploy": "chmod +x deploy-unified.sh && ./deploy-unified.sh",
    "deploy:frontend": "cd frontend && vercel --prod",
    "deploy:backend": "cd backend && vercel --prod",
    "deploy:vercel": "vercel --prod",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd frontend && npm run format",
    "format:backend": "cd backend && npm run format",
    "clean": "rm -rf frontend/.next frontend/out backend/.vercel frontend/node_modules backend/node_modules node_modules",
    "setup": "npm run install:all && npm run build",
    "start": "npm run start:frontend",
    "start:frontend": "cd frontend && npm start",
    "health": "curl -f $NEXT_PUBLIC_API_URL/api/health || echo 'Backend not available'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "vercel": "^32.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ai",
    "tutoring",
    "education",
    "nextjs",
    "vercel",
    "supabase",
    "openai",
    "machine-learning",
    "collaborative-learning"
  ],
  "author": "AI Tutoring App Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ai-tutoring-app"
  },
  "bugs": {
    "url": "https://github.com/your-org/ai-tutoring-app/issues"
  },
  "homepage": "https://github.com/your-org/ai-tutoring-app#readme"
}