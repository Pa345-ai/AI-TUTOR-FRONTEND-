# AI Tutoring App - Unified Environment Variables
# Copy this file to .env.local and fill in your values

# =====================================================
# BACKEND CONFIGURATION
# =====================================================
# Set to 'supabase' to use Supabase backend, 'mock' to use mock data
NEXT_PUBLIC_BACKEND_TYPE=supabase

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Frontend Supabase configuration (same as above)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# =====================================================
# OPENAI CONFIGURATION
# =====================================================
OPENAI_API_KEY=your_openai_api_key

# =====================================================
# NEXT-AUTH CONFIGURATION
# =====================================================
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# =====================================================
# FRONTEND CONFIGURATION
# =====================================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# =====================================================
# OPTIONAL: GOOGLE CLOUD SERVICES
# =====================================================
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id

# =====================================================
# OPTIONAL: AZURE SERVICES
# =====================================================
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=your_azure_speech_region
AZURE_FACE_API_KEY=your_azure_face_api_key
AZURE_FACE_ENDPOINT=your_azure_face_endpoint

# =====================================================
# OPTIONAL: AWS SERVICES
# =====================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region

# =====================================================
# OPTIONAL: SOCIAL AUTHENTICATION
# =====================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# =====================================================
# OPTIONAL: PAYMENT PROCESSING
# =====================================================
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# =====================================================
# OPTIONAL: EMAIL SERVICES
# =====================================================
SENDGRID_API_KEY=your_sendgrid_api_key
SMTP_HOST=your_smtp_host
SMTP_PORT=your_smtp_port
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# =====================================================
# OPTIONAL: SMS SERVICES
# =====================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# =====================================================
# OPTIONAL: REDIS (for caching and queues)
# =====================================================
REDIS_URL=your_redis_url

# =====================================================
# OPTIONAL: MONITORING
# =====================================================
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# =====================================================
# APPLICATION SETTINGS
# =====================================================
NODE_ENV=production
PORT=3000
CORS_ORIGIN=https://your-frontend-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100